{
  "include": ["src"], // TS가 src의 모든 파일을 확인
  "compilerOptions": {
    "outDir": "build", // JS 파일이 생성될 디렉터리를 지정 (build 폴더에 만들어진 코드를 넣을 것이라 알려줌)
    "target": "ES6", // 컴파일될 JS의 버전 선택
    "lib": ["es6"],
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS" // 브라우저 앱을 만들고 있다면 umd를 선택
  }
}
